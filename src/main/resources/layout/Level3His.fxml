    <TextField alignment="CENTER" editable="false" layoutX="822.0" layoutY="1.0" prefHeight="17.0" prefWidth="75.0" style="-fx-background-color: WHITE;" text="MỤC TIÊU">
        <font>
            <Font name="System Bold" size="10.0" />
        </font>
    </TextField>

