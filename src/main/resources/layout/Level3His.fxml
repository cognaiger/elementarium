                    <ImageView fitHeight="40.0" fitWidth="135.0">
                        <image>
                            <Image url="@../button/nxt_level.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <ImageView fitHeight="78.0" fitWidth="356.0" layoutX="17.0" layoutY="86.0" pickOnBounds="true" preserveRatio="true">
