<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameStartController">
   <children>
      <ImageView fitHeight="750.0" fitWidth="1300.0" pickOnBounds="true">
         <image>
            <Image url="@../background/main_bgr.jpg" />
         </image>
      </ImageView>
      <Label alignment="CENTER" layoutX="441.0" layoutY="210.0" prefHeight="59.0" prefWidth="419.0"
             style="-fx-text-fill: #ff0000;" text="Elementarium" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
         <effect>
            <DropShadow blurType="GAUSSIAN">
               <color>
                  <Color opacity="0.699999988079071" />
               </color>
            </DropShadow>
         </effect>
      </Label>
      <Button layoutX="500.0" layoutY="337.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="300.0"
              style="-fx-background-radius: 20; -fx-border-color: #005fb4; -fx-border-radius: 20; -fx-padding: 10 20;
              -fx-background-color: F4D160;" onAction="#startGame" fx:id="startBtn"
               onMouseEntered="#onMouseHover1" onMouseExited="#onMouseExit1">
         <graphic>
            <Label style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="Play">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </graphic>
      </Button>
      <Button layoutX="500.0" layoutY="492.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="300.0"
              style="-fx-background-radius: 20; -fx-border-color: #005fb4; -fx-border-radius: 20; -fx-padding: 10 20;
              -fx-background-color: F4D160;" onAction="#exitGame" fx:id="quitBtn" onMouseEntered="#onMouseHover2"
               onMouseExited="#onMouseExit2">
         <graphic>
            <Label style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="Exit">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Label>
         </graphic>
      </Button>
      <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="577.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../button/logo.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
